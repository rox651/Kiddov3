---
import Logo from "../../assets/logo.svg";
import LinkButton from "../common/button/LinkButton.astro";
---

<header class="kd-section-p flex justify-between items-center relative">
  <a href="/" class="flex items-center gap-4">
    <span class="sr-only">Kiddo™ Studio</span>
    <Logo class="w-32 h-16"/>
  </a>
  <div class="text-center absolute -bottom-24 left-1/2 w-full lg:translate-0 lg:w-auto -translate-1/2 lg:static text-sm lg:text-base text-gray-400/80 uppercase">
      <p id="datetime">Loading time...</p>
      <p>3°26'14'' N 76°31.35' O | SOUTH AMERICA</p>
      <p>COPYRIGHT © 2018 Kiddo™. All Rights Reserved.</p>
  </div>
  <LinkButton link="/contact" text="Get in touch"/>
</header>

<script>
    function updateTime() {
      const now = new Date();
      const options = {
        weekday: 'short',
        year: '2-digit',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: true,
        timeZone: 'America/Chicago',
      };
      const formatter = new Intl.DateTimeFormat('en-US', options);
      document.getElementById('datetime').textContent = formatter.format(now).replace(",", "").replace(",", "") + " CST";
    }

    updateTime();
    setInterval(updateTime, 1000);
  </script>
